{
    "name": "multi-step-form",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build --turbopack",
        "start": "next start",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "prepare": "husky"
    },
    "dependencies": {
        "next": "15.5.4",
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "zod": "^4.1.11"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
        "@tailwindcss/postcss": "^4",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "eslint": "^9",
        "eslint-config-next": "15.5.4",
        "eslint-config-prettier": "^10.1.8",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.1",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "tailwindcss": "^4",
        "typescript": "^5"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,css,md,html}": [
            "prettier --write"
        ]
    },
    "packageManager": "yarn@4.10.3"
